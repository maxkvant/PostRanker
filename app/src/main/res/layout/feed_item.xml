<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/feed_item">
   <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_height="wrap_content">
        <TextView
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="8pt"
            android:id="@+id/feed_item_wall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/tw__composer_black"/>
        <TextView
            android:textAlignment="center"
            android:id="@+id/feed_item_date"
            android:textSize="6pt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/tw__composer_black"/>
        <TextView
            android:id="@+id/feed_item_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="8pt"

            android:textColor="@color/tw__composer_black"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="6pt"
            android:background="@color/tw__light_gray"
            android:padding="7dp"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:text="@string/show"
            android:id="@+id/feed_item_show"
            style="@style/Widget.AppCompat.Button" />
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_margin="@dimen/activity_vertical_margin"
            android:background="@android:color/darker_gray"/>
    </LinearLayout>
</LinearLayout>